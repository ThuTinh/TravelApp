<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f3f9fb"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddSanPham">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgAddSanPham"
            android:layout_width="150dp"
            android:src="@drawable/noimg"
            android:scaleType="centerCrop"
            android:layout_height="150dp" />

        <Button
            android:id="@+id/btnAddSanPhamChoose"
            android:layout_width="131dp"
            android:layout_height="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_custom"
            android:text="Choose a picture"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên món ăn:"/>
        <EditText
            android:id="@+id/txtAddsanPhamTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá"/>
        <EditText
            android:id="@+id/txtAddSanPhamGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />

    </LinearLayout>

    <Button
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:id="@+id/btnAddSanPhamThem"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:background="@drawable/button_custom"
        android:text="Thêm" />

    <TextView
        android:id="@+id/lbSoSanPhamDaThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số sản phẩm đã thêm: 0"
        android:textColor="#f12d2d"
        android:textSize="20dp" />



</LinearLayout>