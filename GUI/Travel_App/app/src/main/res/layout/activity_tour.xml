<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Tour">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <technolifestyle.com.imageslider.FlipperLayout
                android:id="@+id/flipTour"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </technolifestyle.com.imageslider.FlipperLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/phone"/>

                    <TextView

                        android:id="@+id/lbTourPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textAlignment="center"
                        android:textColor="#f12d2d" />


                </LinearLayout>
                <LinearLayout

                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/facebook"/>

                    <TextView
                        android:id="@+id/lbTourFace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="facbook"
                        android:textAlignment="center"
                        android:textColor="#f12d2d" />

                </LinearLayout>
                <LinearLayout

                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/email"/>

                    <TextView

                        android:id="@+id/lbTourEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textAlignment="center"
                        android:textColor="#f12d2d" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Thông Tin tour"
                android:textAlignment="center"
                android:textColor="#f79f24"
                android:textSize="24sp"
                android:textStyle="bold"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Thời gian"
                    android:textColor="#1d5464"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbTourThoiGian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Thời gian"
                    android:textSize="18sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Thời gian từ: "
                    android:textColor="#1d5464"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbTourTGTu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="từ: "
                    android:textSize="18sp" />

            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="Đến:"
                   android:textColor="#1d5464"
                   android:textSize="18sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/lbTourTGDen"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="Đến:"
                   android:textSize="18sp" />

           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Giá tour:"
                    android:textColor="#1d5464"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbTourGia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Giá:"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Các địa điểm đến:"
                        android:textColor="#1d5464"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbTourDiaDiemDen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Các địa điểm đến"
                        android:textSize="18sp" />

                </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Mã tour:"
                     android:textColor="#1d5464"
                     android:textSize="18sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/lbTourMaTour"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Mã tour"
                     android:textSize="18sp" />

             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Số lượng còn lại:"
                     android:textColor="#1d5464"
                     android:textSize="18sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/lbTourSoLuongConLai"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Số lượng còn lại"
                     android:textSize="18sp" />

             </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khởi hành tại:"
                        android:textColor="#1d5464"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbKhoiHanhTai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khởi hành tại"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách lịch trình" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvListChiTietTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Truy cập vào link bên dưới để biết thêm thông tin chi tiết và tiến hành đặt tour"
                android:textColor="#f79f24"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbTourLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="link"
                android:textColor="#f12d2d"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/lbTourCmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình Luận"
                android:textColor="#1d5464"
                android:textSize="24sp" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTourCmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>



            <EditText
                android:layout_marginLeft="10dp"
                android:hint="Bình luận..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTourCmt"/>

            <Button
                android:id="@+id/btnTourSave"
                android:layout_width="101dp"
                android:layout_height="29dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_custom"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="#ffffff" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>