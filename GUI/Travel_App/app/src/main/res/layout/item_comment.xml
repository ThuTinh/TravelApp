<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginStart="5dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbName"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Nguyễn Văn A"
        android:textColor="#a20e0e"
        android:textSize="15dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lbTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="12h:12p:00 11/12/2018"
        android:textColor="#2a6171"
        android:textSize="12dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lbContentCmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Địa điểm phù hợp để đi du lịch, dã ngoại"
        android:textSize="16dp" />


</LinearLayout>