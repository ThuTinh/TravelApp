<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efe784"
   android:layout_margin="7dp"
    card_view:cardCornerRadius="10dp"
    android:id="@+id/card"
    card_view:cardElevation="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#ebebe3"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
          />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txttieude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:text=" Tên điạ danh"
                android:textAlignment="center"
                android:textColor="@color/colorTextDangNhap"
                android:textSize="25dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtthongTin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="Mô tả"
                android:textColor="@color/colorTextDangNhap"
                android:textSize="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lượt thích"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/imgYeuTich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:scaleType="fitXY"
                  android:src="@drawable/tymdo" />

                <TextView
                    android:id="@+id/lbSoLuotThich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:text="0"
                    android:textColor="@color/colorTextDangNhap"
                    android:textSize="15dp"

                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>